<b:defaultmarkup type='Image'>
  <b:includable id='main'>
    <b:include name='widget-title'/>
    <b:include name='content'/>
  </b:includable>
  <b:includable id='content'>
    <div class='widget-content'>
      <figure class='figure d-block mb-0'>
        <b:tag cond='data:link' expr:href='data:link' name='a'>
          <b:if cond='data:sourceUrl'>
            <img class='figure-img d-block img-fluid w-100 mb-0' expr:alt='data:messages.image' expr:src='data:sourceUrl'/>
          </b:if>
        </b:tag>
        <b:if cond='data:caption'>
          <figcaption class='figure-caption text-center mt-2'>
            <data:caption/>
          </figcaption>
        </b:if>
      </figure>
    </div>
  </b:includable>
</b:defaultmarkup>